.post-new
	.bkg
		= image_tag('form_signup_bkg.png')
		.grid
			.post-form.pb-60.pt-60
				.form-wrapper--flex.right
					.form-wrapper--content
						%h2.ta-c 
							%span Sign
							.svg.svg-login
								= inline_svg "icon_signup2.svg"
							%span Up
						= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| 
							= f.error_notification 

							.form-inputs
								= f.input :display_name, required: true, autofocus: true, class: 'black-50'
								= f.input :email, required: true, autofocus: true, class: 'black-50'
								= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: 'black-50' 
								= f.input :password_confirmation, required: true, class: 'black-50' 
							.form-actions
								= f.button :submit, "Sign up", class: 'button button-small button-trans' 

						= render "devise/shared/links" 
