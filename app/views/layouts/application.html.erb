<!DOCTYPE html>
<html>
<head>
  	<title>DevMeetup</title>
  	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  	<%= csrf_meta_tags %>
  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  	<link href="https://fonts.googleapis.com/css?family=Satisfy" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Montserrat|Open+Sans+Condensed:700" rel="stylesheet">

</head>
<body>
<header>
	<nav class="clearfix pt-16 pb-16 pr-16 pl-16">
		<div class="logo">
			<%= link_to root_path do %>
				<%= inline_svg "logo_2.svg" %>
			<% end %>
		</div>
		<div class="menu">
			<ul class="primary-menu">
				<% if user_signed_in? %>
					<li>
						<%= link_to 'Post', new_post_path, class: 'uppercase white' %>
					</li>
					<li>
						<%= link_to('Logout', destroy_user_session_path, :method => :delete, class: 'uppercase white') %> 
					</li>
					
				<% else %>
					<li>
						<%= link_to 'Sign Up', new_user_registration_path, class: 'uppercase white' %>
					</li>
					<li>
						<%= link_to 'Login', new_user_session_path, class: 'uppercase white' %>
					</li>
				<% end %>
			</ul>
			<% if user_signed_in? %>
				<ul class="secondary-menu">
					<li>
						<%= link_to('My Posts', users_path, class: 'black-50') %> 
					</li>
					<li>
						<%= link_to('My Profile', edit_user_registration_path, class: 'black-50') %> 
					</li>
					<li>
						<%= link_to('Following', user_follow_index_path, class: 'black-50') %> 
					</li>
				</ul>
			<% end %>
		</div>
	</nav>
</header>
<div class="grid">
	<p class="notice gray"><%= notice %></p>
	<p class="alert gray"><%= alert %></p>
</div>

	<%= yield %>
</body>

<footer class="pt-60 pb-40">
	<p class="uppercase center black-50">Â© <%= Date.today.year %> Code+Connect Denver</p>
</footer>
</html>
